<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Add Stock</h1>
    <div class="col-6 offset-3"></div>
    
    <form action="/groceries/<%=said%>/addGroStock?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="Grocery ID!">Grocery ID</label>
            <input class="form-control" type="text" id="Grocery ID!" name="groceryid" value="<%=said%>" readonly required>
            <div class="valid-feedback">Looks Good!</div>
        </div>
        <input type="file" name="image" id="" multiple="true">
        <div class="mb-3"> 
            <label class="form-label" for="Quantity">Quantity</label>
            <input class="form-control" type="text" id="Quantity" name="qty" required>
            <div class="valid-feedback">Looks Good!</div>
        </div>
        
        <div class="mb-3">
            <label class="form-label" for="Price">Price</label>
            <input class="form-control" type="text" id="Price" name="price" required>
            <div class="valid-feedback">Looks Good!</div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="Available Quantity">Available Quantity</label>
            <input class="form-control" type="text" id="Available Quantity" name="avbqty" required>
            <div class="valid-feedback">Looks Good!</div>
        </div>
        <div class="mb-3">
            <button class="btn btn-success">Submit</button>
        </div>
    </form>
    </div>
</div>
   
