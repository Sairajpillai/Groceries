<% layout('layouts/boilerplate')%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body style="background-color:rgb(248, 248, 248);">
    <h1 style="text-align:center">Kitchen-Essentials</h1>
    <a href="/groceries/new">Add Products!</a>
    <%for (let grocery of groCatgry){%>
        <div class="card mb-3" >
            <div class="row g-0">
              <div class="col-md-4">
                <img class="img-fluid" src="<%=grocery.image[0].url%>" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%=grocery.name%></h5>
                  <p class="card-text"><%=grocery.description%></p>
                  <a href="/groceries/<%=grocery._id%>" class="btn btn-primary">Visit <%=grocery.name%> Products!</a>
                 

                </div>
              </div>
            </div>
          </div>
        <%}%>
</body>
</html>